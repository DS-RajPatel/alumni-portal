 <!-- header file add -->
 <%- include('../header'); -%>
 <link rel="stylesheet" href="css/community.css">
 <link rel="stylesheet" href="css/pagination.css">
     <!-- PROJECT DETAIL -->
     <section class="blog section-padding">
    
      <div class="row">

           <div class="col-lg-12 col-12 text-center" style="border: 3px solid green;">

             <h1>Community</h1>
           </div>

 </div>

</section>
   <section>
     
     <div class="centered">
          <div class="plus" id="plus">
            <div class="plus__line plus__line--v">
              <a href="#" class="plus__link ion-person" style="size: 16px;" data-toggle="modal" data-target="#myModal">Add To Information</a>
             
            </div>
            <div class="plus__line plus__line--h"></div>
          </div>
        </div>
        
   <br>
   <br>
   </section>
   <section>
    
 <div class="row">
    
  
    <% if(alm.length > 0){
        for(let i=0;i<alm.length;i++){
          %> 
    <div class="card">
        <div class="icon">
            <i class="fa fa-users" aria-hidden="true" style="font-size: 45px;"> </i>
        </div>
        
        <%= alm[i].alm_email %>
        
        <div class="card__body">
            <%= alm[i].alm_post_desc %>
        </div>

        <div class="card__body">
            <%= alm[i].alm_post_date %>
        </div>

        <span><a href="upload/post/<%= alm[i].alm_info %>"><%= alm[i].alm_info %></a></span>
    </div>
    
<% 
}
}
else
{
%>
<div class="row">

  <div class="col-lg-6 col-6 text-center" style=" margin: auto;
  width: 50%;
  border: 3px solid rgb(255, 107, 77);
  padding: 10px;">

    <h3>No Post Found</h3>
  </div>

</div>

<% } %>
</section>

<ul class="pagination">
    <% for(let j = 1; j <= totalpage; j++ ){ %>
    <li>  <a href="?page=<%= j %>"><%= j %></a></li>
    <%
    } %>
  </ul>



   <div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="modal-box">
                
    
                <!-- Modal -->
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <form action="/add_post" method="post" enctype="multipart/form-data">
                        <div class="modal-content clearfix">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                            <div class="modal-body">
                                <h3 class="title">Create New Post</h3>
                               
                                <div class="form-group">
                                    <span class="input-icon"><i class="fa fa-user"></i></span>
                                    <input type="email" name="email" class="form-control" placeholder="Enter email" value="<%= data.user_email %>">
                                </div>
                                
                                <div class="form-group">
                                    <span class="input-icon"><i class="fa fa-info"></i></span>
                                    <input type="text" name="description" class="form-control" placeholder="Enter Description">
                                </div>

                                <div class="form-group">
                                    <span class="input-icon"><i class="fa fa-file"></i></span>
                                    <input type="file" class="form-control" name="desc_file">
                                </div>
                               
                                <input type="submit" value="Add" class="btn">
                            
                            </div>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="https://code.jquery.com/jquery-1.12.0.min.js"></script><script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>


