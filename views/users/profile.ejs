<%- include('../header'); -%>
<link rel="stylesheet" href="css/profile.css">
<div class="card">
    <div class="card-header">
      
      <div class="text-header"><a href="/alumni" style="color: azure;">Alumni Bio Update</a></div>
    </div>
  </br>
    <div class="card-header">
      
      <div class="text-header">Personal Information</div>
    </div>
    
    <div class="card-body">
      <form action="/update" method="post">
        <div class="form-group">
          <input class="form-control" name="uid" id="uid" type="hidden" value="<%= data._id %>" >
          <label for="username">Enroll No.:</label>
          <input required="" class="form-control" name="enroll" id="username" type="text" value="<%= data.user_enroll %>" disabled>
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input required="" class="form-control" name="email" id="email" type="email" value="<%= data.user_email %>">
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input required="" class="form-control" name="password" id="pass" type="password"  value="<%= data.user_password %>">
          <input type="checkbox" onclick="myFunction()">Show Password
        </div>
       
       <input type="submit" class="btn" value="submit">    </form>
    </div>
  </div>
  

        
  <% if(typeof msg !=='undefined') { %>
    <div class="alert alert-danger">
      <%= msg %>
    </div>
  <% } %>
    </br>
        </div>
      
<script>
  function myFunction() {
    var x = document.getElementById("pass");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
  </script>
    
<%- include('../footer'); -%>