<%- include('../header'); -%>
<%- include('../sidebar'); -%>
 
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
     Edit News
      
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">Dashboard</li>
    </ol>
  </section>



</br>


        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-12">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">News Details</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" action="/edit_news" method="post" enctype="multipart/form-data">
              <div class="box-body">
                <div class="form-group">
                  <label for="inputNews" class="col-sm-2 control-label" >News Title</label>

                  <input type="hidden" class="form-control" id="inputNews" name="nid" value="<%= news._id %>">


                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputNews" placeholder="News" name="News" required = 'required' value="<%= news.News_title %>">
                  </div>

                </div>
                <div class="form-group">
                  <label for="inputNewsDetails" class="col-sm-2 control-label" >News Details</label>

                  <div class="col-sm-10">
                    <input type="NewsDetails" class="form-control" id="inputNewsDetails" placeholder="News Details" name="NewsDetails" required = 'required'  value="<%= news.News_details %>">
                  </div>
                
            

                  
                </div>
                    <div class="form-group">
                  <label for="inputNewsImage" class="col-sm-2 control-label" >News Image</label>

                  <div class="col-sm-10">
                     <input type="file" id="inputeventban" name="img1" required = 'required' >

                  </div>

                </div>
              
                
             
                
              </div>
              <!-- /.box-body -->
            
              <div class="box-footer">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-info pull-center">News Add</button>
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
  
