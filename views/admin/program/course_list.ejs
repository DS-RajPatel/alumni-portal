<%- include('../header'); -%>
<%- include('../sidebar'); -%>
 

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      List Of Course
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">Dashboard</li>
    </ol>
  </section>



  <div class="row">
    <div class="col-xs-12">
      <div class="box">

        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">

          <table class="table table-hover">
            <tr>
              <th></th>
              <th>Name Of Course</th>
              <th>Action</th>

            </tr>
            
            <tr>
              <%
              if(course.length > 0){
                  for(let i=0;i<course.length;i++){
                    %> 
                    <tr>
                      <td><%= [i+1] %></td>
                      <td><%= course[i].course_name %></td>
                      
                      <td> <a href="/course_delete?id=<%= course[i]._id %>"> 
                        <i class="fa fa-trash" style="color: red; font-size:20px;" aria-hidden="true"></i></a></td>
                    </tr>
                    <% 
                  }
                }
              else
              {
              %>
              <tr>
                <td colspan="2"> Course Not found</td>
              </tr>
              <% } %>
       

          </table>
